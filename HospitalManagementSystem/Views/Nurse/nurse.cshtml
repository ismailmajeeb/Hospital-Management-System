@using HospitalManagementSystem.Core.Entities
@model IEnumerable<Nurse>

@{
    ViewData["Title"] = "Nurses";
}

<h1>Nurses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftEnd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShiftStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShiftEnd)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NurseID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.NurseID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.NurseID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
